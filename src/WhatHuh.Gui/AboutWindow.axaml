<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="WhatHuh.Gui.AboutWindow"
        Title="About"
        Width="400" Height="320"
        RenderOptions.TextRenderingMode="SubpixelAntialias"
        RenderOptions.BitmapInterpolationMode="HighQuality"      
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackground}"
        BorderBrush="{StaticResource SubtleBorder}" BorderThickness="1"
        CornerRadius="12">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="What? Huh? Subtitler" 
                   FontSize="24" FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <TextBlock Grid.Row="1" 
                   Text="This is free software, as in speech. I hope you find it useful."
                   TextWrapping="Wrap" FontSize="14"
                   Foreground="{StaticResource SecondaryText}"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="2" Spacing="8">
            <Button Content="GitHub - Adam Marciniec" 
                    Click="OpenGitHub_Click"
                    HorizontalAlignment="Left"/>
            <Button Content="Whisper.Net by Sandro Hanea" 
                    Click="OpenWhisperNet_Click"
                    HorizontalAlignment="Left"/>
            <Button Content="Silero VAD" 
                    Click="OpenSileroVad_Click"
                    HorizontalAlignment="Left"/>
            <Button Content="Image icons by rsetiawan - Flaticon" 
                    Click="OpenFlaticon_Click"
                    HorizontalAlignment="Left"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Close" 
                HorizontalAlignment="Right"
                Click="Close_Click"
                Padding="24,8"
                Classes="PrimaryAction"/>
    </Grid>
</Window>
